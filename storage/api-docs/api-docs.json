        "/api/proyectos/{id}/evaluar": {
            "put": {
                "tags": [
                    "Proyectos"
                ],
                "summary": "Evaluar un proyecto",
                "description": "Permite evaluar un proyecto sin restricciones de autenticación.",
                "operationId": "e1850c6158f4b503ea0c364a19156762",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del proyecto",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "evaluador_id",
                                    "dominio_tema",
                                    "manejo_auditorio",
                                    "planteamiento_problema"
                                ],
                                "properties": {
                                    "evaluador_id": {
                                        "type": "integer",
                                        "example": 18
                                    },
                                    "dominio_tema": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 4
                                    },
                                    "manejo_auditorio": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 3
                                    },
                                    "planteamiento_problema": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 4
                                    },
                                    "justificacion": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 3
                                    },
                                    "objetivo_general": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 4
                                    },
                                    "objetivo_especifico": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 4
                                    },
                                    "marco_teorico": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 3
                                    },
                                    "metodologia": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 2
                                    },
                                    "resultado_esperado": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 4
                                    },
                                    "referencia_bibliografica": {
                                        "type": "integer",
                                        "maximum": 5,
                                        "minimum": 1,
                                        "example": 3
                                    },
                                    "comentarios": {
                                        "type": "string",
                                        "example": "Proyecto sólido, pero necesita mejorar la metodología"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Evaluación registrada correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Evaluación registrada correctamente"
                                        },
                                        "puntuacion": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 3.4
                                        },
                                        "puntaje_total": {
                                            "type": "integer",
                                            "example": 34
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Proyecto no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Proyecto no encontrado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "El proyecto no está inscrito en un evento",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "El proyecto debe estar inscrito en un evento para ser evaluado"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
