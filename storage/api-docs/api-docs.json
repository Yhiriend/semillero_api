            "post": {
                "tags": [
                    "Inscripciones"
                ],
                "summary": "Inscribir estudiante a un semillero",
                "description": "Registra una nueva inscripción de estudiante a semillero",
                "operationId": "storeInscripcion",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "semillero_id",
                                    "usuario_id"
                                ],
                                "properties": {
                                    "semillero_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "usuario_id": {
                                        "type": "integer",
                                        "example": 5
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Inscripción exitosa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Inscripción realizada correctamente."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflicto - Ya existe inscripción",
